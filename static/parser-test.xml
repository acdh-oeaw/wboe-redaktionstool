																{"value": "Sonja Schwaiger", "attribute": {"xml:id": "SS"}},
																{"value": "Jan Braun", "attribute": {"xml:id": "JD"}},
																{"value": "Angela Bergmayer", "attribute": {"xml:id": "AB"}}
															]
														}}],
														"layout": { "frame": "line" }
													} ?>
							</name>
						</respStmt>
						<respStmt>
							<?options { "title": "Encoding Scheme", "layout": { "frame": "line" } } ?>
							<resp>
								<?options {
									"value": {
										"is": {
											"value": "Encoding Scheme",
											"use": true,
											"possibleValues": ["Encoding Scheme", "encoding"]
										}
									},
									"layout": ["hidden"]
								} ?>
							</resp>
							<name><?copyOptions { "fromId": "nameSimple" } ?>Jack Bowers</name>
