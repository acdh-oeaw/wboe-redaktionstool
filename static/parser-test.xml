							<name xml:id="JD"><?copyOptions { "fromId": "nameSimple" } ?>Jan Braun</name>
							<name xml:id="AB"><?copyOptions { "fromId": "nameSimple", "options": { "layout": { "after": null } } } ?>Angela Bergmayer</name>
						</respStmt>
						<respStmt>
							<?options { "title": "Student assistants", "layout": { "frame": "line" } } ?>
							<resp>
								<?options {
									"value": {
										"is": {
											"value": "Student assistants",
											"use": true,
											"possibleValues": ["Student assistants", "student assistants"]
										}
									},
									"layout": ["hidden"]
								} ?>
							</resp>
							<name><?copyOptions { "fromId": "nameSimple" } ?>Eva Wahlmüller</name>
